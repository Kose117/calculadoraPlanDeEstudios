                        </div>
                        <a href="#" id="btn-cerrar-popup1" class="btn-cerrar-popup"><i class="fas fa-times"></i></a>
                        <div class="cuerpo-tabla">
                            <table id="tabla-materias">
                                <tr>
                                    <th>Nombre</th>
                                    <th>%</th>
                                    <th>Notas</th>
                                    <th>Definitiva</th>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="cara popup-right">
                    <div class="body-popup-right">
                        <a href="#" id="btn-cerrar-popup2" class="btn-cerrar-popup"><i class="fas fa-times"></i></a>
                        <a href="#" id="regresar"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                        <div class="agregar2">
                            <button id="btnAgregar2" class="btn btnAgregar btn-animacion" ><span class="btnAgregarSpan">Agregar</span></button>
                            <button id="btnEliminar2" class="btn btnAgregar btn-animacion" ><span class="btnAgregarSpan">Eliminar</span></button>
                        </div>
                        <div class="cuerpo-tabla">
                            <table id="tabla-materias2">
                                <tr>
                                    <th>Nombre</th>
                                    <th>%</th>
                                    <th>Notas</th>
                                    <th>Definitiva</th>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="containerCard-papa">
        <a href="#" id="btn-cerrar-popup3" class="btn-cerrar-popup"><i class="fas fa-times"></i></a>
        <div id="stars"></div>
        <div id="stars2"></div>
        <div id="stars3"></div>
        <div class="containerCard"></div>
    </div>

    <div class="container-general">
        <section>
            <div class="container-cubo" id="0"></div>
        </section>
    </div>
    
    <template id="tarjeta-template">
        <div class="card-father">
            <div class="card">
                <div class="card-front" style="background-image: url(&quot;../images/formula.png&quot;);">
                    <div class="bg"></div>
                    <div class="body-card-front"><h1>Calculo integral</h1></div>
                </div>
                <div class="card-back">
                    <div class="body-card-back">
                        <h1 class="alejate">Clase</h1>
                        <h2 class="alejate">Nota:</h2>
                        <h2 class="alejate">Profesor:</h2>
                        <button class="btn btn-abrir-popup">
                            <span>CÃ¡lculo Diferencial</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="cubo-template">
        <div class="cubo">
                <div class="botonCubo" id="botonCubo">
                    <div class="bloque">
                        <span style="--i:0;"></span>
                        <span style="--i:1;"></span>
                        <span style="--i:2;"></span>
                        <span style="--i:3;"></span>
                    </div>
                    <div class="texto">
                        <span style="--i:0;" data-text="Click">Click</span>
                        <span style="--i:2;" data-text="Ver">Ver</span>
                        <span style="--i:3;" data-text="Para">Para</span>
                        <span style="--i:1;" data-text="Materias">Materias</span>
                    </div>
                </div> 
                <div class="caras" id="arriba">Semestre 1</div>
                <div class="caras" id="abajo"></div>
                <div class="caras" id="derecha">Semestre 1</div>
                <div class="caras" id="izquierda">Semestre 1</div>
                <div class="caras" id="frente">Semestre 1</div>
                <div class="caras" id="atras">Semestre 1</div>
            </div>
